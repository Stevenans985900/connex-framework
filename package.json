{
  "name": "@vechain/connex-framework",
  "version": "1.0.0-beta-5",
  "description": "A library implements VeChain Connex interface",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist/;tsc -p .",
    "lint": "tslint -p .",
    "prepare": "npm run build",
    "test": "TS_NODE_FILES=true NODE_ENV=test npx mocha --require ts-node/register --timeout 20000 --exit 'test/framework.test.ts'",
    "cover": "TS_NODE_FILES=true NODE_ENV=test nyc npm t"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qianbin/connex-framework.git"
  },
  "keywords": [
    "Connex",
    "Framework",
    "VeChain",
    "Wallet"
  ],
  "author": "qianbin",
  "license": "LGPL-3.0",
  "bugs": {
    "url": "https://github.com/qianbin/connex-framework/issues"
  },
  "homepage": "https://github.com/qianbin/connex-framework#readme",
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "test/",
      "**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html",
      "text-summary"
    ],
    "all": true
  },
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "@vechain/connex.driver-nodejs": "^1.0.0-beta-5",
    "connex-tests": "git+https://github.com/libotony/connex-tests.git",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "ts-node": "^8.2.0",
    "tslint": "^5.17.0",
    "typescript": "^3.5.1"
  },
  "dependencies": {
    "@vechain/abi": "^1.0.1",
    "@vechain/connex": "^1.3.1",
    "validator-ts": "^0.9.1"
  }
}
